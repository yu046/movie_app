<div class="container-movie">
    <%= render 'shared/menubar' %>
    <div class="conte-info">
        <div class="index-link">
        <%= render "shared/toolbar"%>
        </div>
        <div class="movie-list"> 
        <h1>作品一覧</h1>
        <% @post.each do |post|%>
            <%= link_to("/post/edit/#{post.id}") do %>
                <div class="movie">
                    <div class="image">
                        <img src="/movie_image/<%= post.image %>">
                    </div>
                    <div class="info">
                        <div class="title">
                            <%= post.title %>
                        </div>
                        <div class="release">
                            公開日：<%= post.release.strftime('%Y/%m/%d') %>
                        </div>
                        <div class="run-time">
                            上映時間：<%= post.running_time %>分
                        </div>
                        <div class="syn">
                            あらすじ：<%= post.synopsis %>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
        </div>
    </div>
</div>
