<%
=begin%>
  ユーザーログインページ
<%
=end%>
<div class="container-login">
  <div class="title"><%= t('.sign_in') %></div>

  <div class="login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="info">
      <div class="info-item">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="info-item">
        <div class="info-pass">
          <%= f.label :password, "パスワード" %>
          <div class="pass-emp">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to t(".パスワードを忘れましたか？"), new_password_path(resource_name) %><br />
            <% end %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>

        <div class="submit">
          <%= f.submit t('.sign_in') %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="sing-up">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="Border">
      <div class="border"></div><div class="text">初めてweekendをご利用ですか？</div><div class="border"></div><br>
    </div>
    <%= link_to t(".アカウント登録"), new_registration_path(resource_name) %><br>
    <% end %>
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to t('.アカウント確認のメールを受け取っていませんか？'), new_confirmation_path(resource_name) %><br />
    <% end %>
    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to t('.アカウントのロック解除方法のメールを受け取っていませんか？'), new_unlock_path(resource_name) %><br />
    <% end %>
    <%= link_to("/letter_opener") do %>
        メールを確認
    <% end %>
  </div>
</div>