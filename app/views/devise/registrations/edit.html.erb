<div class="container-user">
    <div class="index-link">
    </div>
    <div class="user-info">
    <h2><%= t('.title', resource: resource.model_name.human) %></h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="link">
            <%= link_to("topに戻る", "/") %>
            <%= link_to t('devise.shared.links.back'), :back %>
            </div>
            <div class="profile">
                <div class="head">
                </div>
                <div class="user">
                    <div class="image">
                    </div>
                    <div class="info">
                        <div class="name">
                        <%= f.label :image %><br/>
                        <%= f.file_field :userimage %>
                        </div>
                        <div class="name">
                        <%= f.label :username %><br />
                        <%= f.text_field :username %>
                        </div>
                        <div class="email">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
                        <% end %>
                        </div>
                    </div>
                <div class="submit">
                <%= f.submit t('.update') %>
                </div>
        <% end %>
                    <div class="submit">
                    <%= t('.cancel_my_account') %>
                    <%= t('.unhappy') %> <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>
                    </div>
                </div>
            </div> 
    </div>
</div>